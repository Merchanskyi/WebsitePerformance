@using website_performance.Models.PerformanceViewModels

@model List<SitemapViewModel>

@{
    ViewData["Title"] = "Website Performance";
}

<div class="text-center">
    @{
        int siteMapCounter = 1;
        @foreach (var item in Model)
        {
            <div class="row justify-content">
                <div class="col col-lg-1 bg-light border border-info">
                    <h5>
                        @siteMapCounter
                        @{siteMapCounter++;}
                    </h5>
                </div>

                <div class="col col-lg-8 bg-light border border-info" style="word-wrap: break-word">
                    <a href="@item.Sitemap" target="_blank">@item.Sitemap</a>
                </div>

                <div class="col col-lg-3 bg-light border border-info">
                    <h6>
                        @item.Responce
                    </h6>
                </div>
            </div>
        }
        <form method="get" asp-action="Index">
            <div class="text-right">
                <button class="btn btn-warning" type="submit">Back</button>
            </div>
        </form>
    }
</div>